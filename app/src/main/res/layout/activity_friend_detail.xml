<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    >




    <RelativeLayout
        android:id="@+id/rootRL"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="@drawable/app7"
        android:layout_weight="0.40"><![CDATA[>


        ]]>

        <TextView
         android:id="@+id/txtName"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:text="Sakhi"
        android:textColor="#161c03"
        android:textStyle="bold"
            android:layout_weight="0.21"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="68dp">

        </TextView>

        <TextView
         android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sakhi@gmail.com"
        android:textColor="#161c03"
        android:textStyle="bold"
            android:layout_weight="0.46"
            android:textSize="30dp"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/txtName"
            android:layout_alignEnd="@+id/txtName">
        </TextView>

        <TextView
         android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0774993748"
        android:textColor="#161c03"
        android:textStyle="bold"
            android:layout_weight="0.08"
            android:textSize="30dp"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/txtEmail"
            android:layout_alignStart="@+id/txtEmail">
        </TextView>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/sms"
            android:src="@drawable/sms_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="sendSMS"/>

    </RelativeLayout><![CDATA[
    >




]]>
</LinearLayout>

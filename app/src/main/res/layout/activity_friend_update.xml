<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    >

    <RelativeLayout
        android:id="@+id/rootRL"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="@drawable/app7"
        android:layout_weight="0.40"><![CDATA[>

        ]]>

        <TextView
         android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sakhi"
        android:textColor="#161c03"
        android:textStyle="bold"
            android:layout_weight="0.03"
            android:layout_above="@+id/txtEmail"
            android:layout_alignEnd="@+id/txtEmail"
            android:layout_marginBottom="10dp"
            android:layout_alignParentStart="true"
            android:textSize="30dp"
            >
        </TextView>

        <TextView
             android:id="@+id/txtEmail"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:text="sakhi@gmail.com"
            android:textColor="#161c03"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/txtPhone"
            android:layout_alignParentStart="true"
            android:textSize="30dp"
            >
            </TextView>

        <TextView
        android:id="@+id/txtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0774993748"
        android:textColor="#161c03"
        android:textStyle="bold"
        android:layout_weight="0.12"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
    </TextView>


    </RelativeLayout>


</LinearLayout>

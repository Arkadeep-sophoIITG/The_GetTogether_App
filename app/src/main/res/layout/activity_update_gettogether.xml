<?xml version="1.0" encoding="utf-8"?>

 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >
<EditText
	 android:id="@+id/txtName"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:hint="Name"
    android:textColor="#00C000"
    android:textStyle="bold"
    >
    </EditText>
<EditText
	 android:id="@+id/txtDescription"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:hint="Description"
    android:textColor="#00C000"
    android:textStyle="bold"
    >
    </EditText>
<TextView
	android:id="@+id/txtSelectedFriends"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:textColor="#00C000"
    android:textStyle="bold"
    >
    </TextView>
<TextView

    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="Select Friends:[Scroll to view all]"
    android:textColor="#00C000"
    android:textStyle="bold"
    >
    </TextView>
    <ScrollView
        android:layout_width="wrap_content"
    android:layout_height="wrap_content">
 <ListView
	android:id="@+id/lstFriends"
	android:layout_height="100dp"
	android:layout_width="wrap_content"
	android:choiceMode="multipleChoice"
	 >"
</ListView>
</ScrollView>

<TextView
	android:id="@+id/txtSelectedPlace"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:textColor="#00C000"
    android:textStyle="bold"
    >
    </TextView>
 <TextView

    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="Select Place:[Scroll to view all]"
    android:textColor="#00C000"
    android:textStyle="bold"
    >
    </TextView>
    <ScrollView
        android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <ListView
	android:id="@+id/lstPlaces"
	android:layout_height="100dp"
	android:layout_width="wrap_content"
	>
</ListView>
</ScrollView>

<TextView
	android:id="@+id/txtSelectedDateTime"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:textColor="#00C000"
    android:textStyle="bold"
    >
    </TextView>
   <Button android:id="@+id/btnSelectDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Date"
    android:onClick="onClickDate" />

   <Button android:id="@+id/btnSelectTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Time"
    android:onClick="onClickTime" />

<Button
     android:id="@+id/btnGetTogetherAdd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Update Get-Together"
    android:textColor="#00C000"
    android:textStyle="bold"
    android:gravity="center_horizontal"
     android:onClick="onClick"

    >

 </Button>

</LinearLayout>

</ScrollView>
